Rearrange array in increasing-decreasing order

#include<bits/stdc++.h>
using namespace std;

int main() {
    
    int n;
    cin>>n;
    
    int arr[n];
    
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    
    sort(arr,arr+n);
    
    for(int i=0;i<n/2;i++)
    {
        cout<<arr[i]<<" ";
    }
    
    for(int i=n-1;i>=n/2;i--)
    {
        cout<<arr[i]<<" ";
    }
    
    return 0;
}



6
1 2 3 4 5 6
1 2 3 6 5 4 

=== Code Execution Successful ===
